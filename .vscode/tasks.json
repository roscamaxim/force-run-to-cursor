{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "watch:esbuild",
			"type": "npm",
			"script": "watch:esbuild",
			"problemMatcher": {
				"owner": "esbuild",
				"pattern": {
					"regexp": "âœ˜ \\[ERROR\\] (.+)$",
					"message": 1
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "\\[watch\\] build started",
					"endsPattern": "\\[watch\\] build finished"
				}
			},
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "watch:tsc",
			"type": "npm",
			"script": "watch:tsc",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			}
		},
		{
			"label": "watch",
			"dependsOn": ["watch:esbuild", "watch:tsc"]
		}
	]
}
