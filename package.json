{
  "name": "force-run-to-cursor",
  "displayName": "Force Run to Cursor",
  "description": "Runs to the cursor without hitting breakpoints â€” automatically disables breakpoints before running and restores them when the debugger stops. A JetBrains-style \"Force Run to Cursor\" for VS Code.",
  "version": "0.3.0",
  "license": "MIT",
  "publisher": "roscamaxim",
  "repository": {
    "type": "git",
    "url": "https://github.com/roscamaxim/force-run-to-cursor.git"
  },
  "homepage": "https://github.com/roscamaxim/force-run-to-cursor#readme",
  "bugs": {
    "url": "https://github.com/roscamaxim/force-run-to-cursor/issues"
  },
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Debuggers"
  ],
  "keywords": [
    "debug",
    "breakpoint",
    "run to cursor",
    "force run",
    "pycharm"
  ],
  "activationEvents": [
    "onDebug"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "runToCursor.run",
        "title": "Run to Cursor",
        "category": "Debug",
        "icon": {
          "light": "media/light/run-to-cursor.svg",
          "dark": "media/dark/run-to-cursor.svg"
        }
      },
      {
        "command": "runToCursor.force",
        "title": "Force Run to Cursor",
        "category": "Debug",
        "icon": {
          "light": "media/light/force-run-to-cursor.svg",
          "dark": "media/dark/force-run-to-cursor.svg"
        }
      },
      {
        "command": "runToCursor.cancelForceRun",
        "title": "Cancel Force Run (Restore Breakpoints)",
        "category": "Debug"
      }
    ],
    "menus": {
      "debug/toolBar": [
        {
          "command": "runToCursor.run",
          "when": "inDebugMode",
          "group": "navigation@1"
        },
        {
          "command": "runToCursor.force",
          "when": "inDebugMode",
          "group": "navigation@2"
        }
      ],
      "editor/context": [
        {
          "command": "runToCursor.force",
          "when": "inDebugMode",
          "group": "debug@3"
        }
      ],
      "commandPalette": [
        {
          "command": "runToCursor.cancelForceRun",
          "when": "forceRunToCursor.isActive"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run bundle",
    "compile": "tsc -p ./",
    "compile:check": "tsc --noEmit",
    "bundle": "npm run compile:check && node esbuild.js --production",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "overrides": {
    "serialize-javascript": ">=7.0.3"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.109.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.12",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  }
}
